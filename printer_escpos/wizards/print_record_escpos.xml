<odoo>
    <record model="ir.ui.view" id="print_record_escpos_form_view">
        <field name="name">print.record.escpos.form (in printer_escpos)</field>
        <field name="model">print.record.escpos</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="printer_id" />
                    <field
                        name="escpos_id"
                        context="{'default_model_id': active_model_id}"
                    />
                    <field name="active_model_id" invisible="1" />
                </group>
                <footer>
                    <button type="special" special="cancel" string="Cancel" />
                    <button
                        string="Print"
                        type="object"
                        name="print_escpos"
                        class="oe_highlight"
                    />
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="print_record_escpos_act_window">
        <field name="name">Print Escpos</field>
        <field name="res_model">print.record.escpos</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
